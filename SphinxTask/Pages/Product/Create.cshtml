@page
@model SphinxTask.Pages.Product.CreateModel

<h2>Create a New Product</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="product.PName"></label>
        <input asp-for="product.PName" class="form-control" />
        <span asp-validation-for="product.PName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="product.Discription"></label>
        <input asp-for="product.Discription" class="form-control" />
        <span asp-validation-for="product.Discription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="product.IsActive"></label>
        <select asp-for="product.IsActive" class="form-control">
            <option value="true">Active</option>
            <option value="false">Not Active</option>
        </select>
        <span asp-validation-for="product.IsActive" class="text-danger"></span>
    </div>
    

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
