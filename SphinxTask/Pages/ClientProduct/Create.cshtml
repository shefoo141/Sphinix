@page
@model SphinxTask.Pages.ClientProduct.CreateModel

<h2>Create a New ClientProduct</h2>

<div class="container">
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="ClientProducts.Lisence"></label>
            <input asp-for="ClientProducts.Lisence" class="form-control" />
            <span asp-validation-for="ClientProducts.Lisence" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ClientProducts.StartDate">Choose Start Date</label>
            <input asp-for="ClientProducts.StartDate" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
            <span asp-validation-for="ClientProducts.StartDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ClientProducts.EndDate">Choose End Date</label>
            <input asp-for="ClientProducts.EndDate" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
            <span asp-validation-for="ClientProducts.EndDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3 col-md-6">
            <label>Choose Client</label>
            <select asp-for="ClientProducts.CId" class="form-control" asp-items="Model.clientsList">
                <option disabled selected>-Select Client-</option>
            </select>
            <span asp-validation-for="ClientProducts.CId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3 col-md-6">
            <label>Choose Product</label>
            <select asp-for="ClientProducts.PId" class="form-control" asp-items="Model.productsList">
                <option disabled selected>-Select Product-</option>
            </select>
            <span asp-validation-for="ClientProducts.PId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    
