@page
@model SphinxTask.Pages.Client.CreateModel

<h2>Create a New Client</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="client.CName"></label>
        <input asp-for="client.CName" class="form-control" />
        <span asp-validation-for="client.CName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="client.Code"></label>
        <input asp-for="client.Code" class="form-control" />
        <span asp-validation-for="client.Code" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="client.Class"></label>
        <select id="Class" asp-for="client.Class" class="form-select" asp-items="Model.ClientClass">
            <option disabled selected>-Select Class-</option>
        </select>
        <span asp-validation-for="client.Class" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="client.State"></label>
        <select  id="state" asp-for="client.State" class="form-select" asp-items="Model.ClientStates">
            <option disabled selected>-Select State-</option>
        </select>
        <span asp-validation-for="client.State" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Create</button>

    </form>



@section Scripts
    {
      <partial name="_ValidationScriptsPartial" />
    
}